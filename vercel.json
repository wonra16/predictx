{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "crons": [
    {
      "path": "/api/cron-check",
      "schedule": "*/5 * * * *"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
